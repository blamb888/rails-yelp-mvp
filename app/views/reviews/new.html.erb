<div class="container">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content  %>
    <%= f.input :rating, collection: Review::RATING, include_blank: false %>
    <%= f.submit class: "btn btn-primary btn-block"  %>
  <% end %>
  <div class="containter my-3">
    <%= link_to 'Back', restaurant_path(@restaurant), class: "btn btn-primary" %>
    <%= link_to 'Home', restaurants_path, class: "btn btn-secondary" %>
  </div>
</div>
