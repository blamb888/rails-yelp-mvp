<div class="container">
  <h1>Restaurants</h1>
  <div class="cards">
    <% @restaurants.each do |restaurant| %>
      <div class="card-product">
        <img src="https://source.unsplash.com/1600x900/?food,delicious" />
        <div class="card-product-infos">
          <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
          <p><%= restaurant.category %> - <%= restaurant.address %></p>
          <p>Phone Number: <%= restaurant.phone_number %></p>
          <p>Average Rating:
          <% restaurant.average_rating.times do %>
            <i class="fas fa-star" style="color: rgba(255, 255, 0, 0.9);"></i>
          <% end %>
          <% if 5 - restaurant.average_rating > 0 %>
            <% (5 - restaurant.average_rating).times do %>
              <i class="far fa-star" style="color: rgba(245, 245, 0, 0.897);"></i>
            <% end %>
          <% end %>
          </p>
        </div>
        <div class="p-2 mt-5">
          <%= link_to restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure you want to delete this restaurant, buddy?" } do %>
            <i class="fas fa-times"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
