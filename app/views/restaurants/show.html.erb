<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.category %></p>
  <p>ðŸ“ž <%= @restaurant.phone_number %></p>
  <% if @restaurant.reviews.any? %>
  <div class="form-group">
    <ul class="list">
      <% @restaurant.reviews.each do |review| %>
        <li><%= review.content %></li>
        <li><%= review.rating  %></li>
        <%= link_to 'Delete', review_path(review), method: :delete %>
        <hr>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-group">
    <%= link_to 'Add', new_restaurant_review_path(@restaurant), class: "btn btn-success" %>
    <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-primary" %>
    <%= link_to 'Back', restaurants_path, class: "btn btn-secondary" %>
  </div>

</div>
