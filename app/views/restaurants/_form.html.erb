<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :category, collection: Restaurant::CATEGORIES, include_blank: false %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <% if @restaurant.id %>
    <%= f.submit 'Update', class: 'btn btn-info' %>
    <%= link_to 'Home', restaurants_path, class: "btn btn-primary" %>
  <% else %>
    <%= f.submit 'Add', class: 'btn btn-info' %>
    <%= link_to 'Home', restaurants_path, class: "btn btn-primary" %>
  <% end %>
<% end %>
